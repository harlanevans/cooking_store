<h1>Edit <%= @plate.name %></h1>

<%= form_for @plate do |f|%>

<%= f.label :name%>
<%= f.text_field :name, required: true, placeholder: "Name", autofocus: true%>

<%= f.label :meal%>
<%= f.text_field :meal, required: true, placeholder: "Meal"%>

<%= f.label :description%>
<%= f.text_area :description, required: true, placeholder: "Description"%>

<%= f.submit %>
<%end%>